{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"]
    },

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true
  },
  "include": ["./src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
